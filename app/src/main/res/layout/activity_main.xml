<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--uper wale line drag and drop k lye-->


    <LinearLayout
        android:id="@+id/cPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/view_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <ImageView
                android:id="@+id/overlay_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_frame_feet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.669" />



        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/upperlayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FF222222"
            android:gravity="center"

            >

            <Button
                android:id="@+id/btnSwitchFlash"
                android:layout_width="16.8dp"
                android:layout_height="31.46dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/ic_icon_flash"
                android:onClick="nClick" />

            <Button
                android:id="@+id/btnCam"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_startrecording"

                />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/ic_icon_gotogallery"
                android:onClick="nClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blacke">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFCFEFE0"
            android:gravity="center"
            >

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:background="@drawable/new_one">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="34.26dp"
                    android:layout_height="41.75dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_icon_feet_normalstate"
                    android:onClick="nClick" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:background="@drawable/one">
            <Button
                android:id="@+id/btn2"
                android:layout_width="57.94dp"
                android:layout_height="38.35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_icon_hands_normalstate"
                android:onClick="nClick" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:background="@drawable/one">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="50.88dp"
                    android:layout_height="26.62dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_icon_lips_normalstate"
                    android:onClick="nClick" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>


