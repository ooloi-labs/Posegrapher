<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/upperlayout"
        android:background="#000"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:rotation="90"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/upperlayout"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="#FF222222"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >



        <ImageView
            android:id="@+id/cam1"
            android:layout_width="26.5dp"
            android:layout_height="26.5dp"
            android:background="@drawable/ic_icon_reshootphoto"

            />

        <ImageView
            android:id="@+id/cam2"
            android:layout_width="34.08dp"
            android:layout_height="24.06dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/ic_icon_confirmphoto"
             />

    </LinearLayout>

</RelativeLayout>